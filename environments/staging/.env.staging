# Staging Environment Configuration
# Production-like environment for testing and validation

# Flask Configuration
SECRET_KEY=staging-secure-key-change-in-real-deployment
FLASK_ENV=production
FLASK_DEBUG=false

# OpenAI Configuration
OPENAI_API_KEY=sk-staging-openai-key-here
AI_MODEL=gpt-4
MAX_TOKENS=300
TEMPERATURE=0.7

# Security Configuration
ADMIN_API_KEY=staging-admin-secure-key-here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/staging.log

# Database Configuration
DATABASE_URL=postgresql://chatbot_user:staging_password@staging-db:5432/chatbot_staging

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_STORAGE_URL=redis://staging-redis:6379/0
RATE_LIMIT_DEFAULT=200 per day, 50 per hour

# Feature Flags
FEATURE_AI_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_RATE_LIMITING=true
FEATURE_SECURITY_HEADERS=true

# Monitoring Configuration
SENTRY_DSN=https://staging-sentry-dsn@sentry.io/project-id
PROMETHEUS_METRICS=true

# Application Settings
APP_NAME=3MTT Chatbot (STAGING)
APP_VERSION=${BUILD_NUMBER:-staging-latest}
ENVIRONMENT=staging

# Staging-specific settings
ENABLE_PERFORMANCE_MONITORING=true
MOCK_EXTERNAL_APIS=false
DATA_ANONYMIZATION=true