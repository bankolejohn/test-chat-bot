# Production Environment Configuration
# Live environment serving real users

# Flask Configuration
SECRET_KEY=${SECRET_KEY_FROM_AWS_SECRETS_MANAGER}
FLASK_ENV=production
FLASK_DEBUG=false

# OpenAI Configuration
OPENAI_API_KEY=${OPENAI_API_KEY_FROM_AWS_SECRETS_MANAGER}
AI_MODEL=gpt-4
MAX_TOKENS=300
TEMPERATURE=0.7

# Security Configuration
ADMIN_API_KEY=${ADMIN_API_KEY_FROM_AWS_SECRETS_MANAGER}

# Logging Configuration
LOG_LEVEL=WARNING
LOG_FILE=logs/production.log

# Database Configuration
DATABASE_URL=${DATABASE_URL_FROM_AWS_SECRETS_MANAGER}

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_STORAGE_URL=${REDIS_URL_FROM_AWS_SECRETS_MANAGER}
RATE_LIMIT_DEFAULT=100 per day, 20 per hour

# Feature Flags
FEATURE_AI_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_RATE_LIMITING=true
FEATURE_SECURITY_HEADERS=true

# Monitoring Configuration
SENTRY_DSN=${SENTRY_DSN_FROM_AWS_SECRETS_MANAGER}
PROMETHEUS_METRICS=true

# Application Settings
APP_NAME=3MTT Chatbot
APP_VERSION=${BUILD_NUMBER}
ENVIRONMENT=production

# Production-specific settings
ENABLE_PERFORMANCE_MONITORING=true
MOCK_EXTERNAL_APIS=false
DATA_ANONYMIZATION=false
ENABLE_BACKUP=true
BACKUP_SCHEDULE=0 2 * * *