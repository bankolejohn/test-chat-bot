# Development Environment Configuration
# This is for local development and shared dev environment

# Flask Configuration
SECRET_KEY=dev-secret-key-not-for-production
FLASK_ENV=development
FLASK_DEBUG=true

# OpenAI Configuration (optional for dev)
# OPENAI_API_KEY=sk-dev-key-or-leave-empty-for-mock-responses
AI_MODEL=gpt-3.5-turbo
MAX_TOKENS=200
TEMPERATURE=0.5

# Security Configuration (relaxed for development)
ADMIN_API_KEY=dev-admin-key-123

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FILE=logs/dev.log

# Database Configuration
DATABASE_URL=sqlite:///dev_chatbot.db

# Rate Limiting (relaxed for development)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_DEFAULT=1000 per hour

# Feature Flags
FEATURE_AI_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_RATE_LIMITING=false
FEATURE_SECURITY_HEADERS=false

# Application Settings
APP_NAME=3MTT Chatbot (DEV)
APP_VERSION=dev-latest
ENVIRONMENT=development

# Development-specific settings
RELOAD_ON_CHANGE=true
MOCK_EXTERNAL_APIS=true
ENABLE_PROFILER=true